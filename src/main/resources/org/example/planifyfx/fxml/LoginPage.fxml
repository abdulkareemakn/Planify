<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.planifyfx.controller.LoginPageController"
            style="-fx-background-color: #F8FAFC;">

    <center>
        <!-- Login Card -->
        <VBox alignment="CENTER" spacing="24" maxWidth="380"
              style="-fx-background-color: #FFFFFF; -fx-padding: 40; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 4);">

            <!-- Branding -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Planify" style="-fx-text-fill: #1E293B;">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>
                <Label text="Sign in to your account" style="-fx-text-fill: #64748B;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
            </VBox>

            <!-- Form Fields -->
            <VBox spacing="16">
                <!-- Username -->
                <VBox spacing="6">
                    <Label text="Username" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 12; -fx-font-size: 14;"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="6">
                    <Label text="Password" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 12; -fx-font-size: 14;"/>
                </VBox>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" text="" wrapText="true" visible="false"
                   style="-fx-text-fill: #EF4444; -fx-font-size: 12;"/>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Sign In" defaultButton="true" maxWidth="Infinity"
                    onAction="#handleLogin"
                    style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <!-- Forgot Password Link -->
            <Hyperlink fx:id="resetPasswordBtn" text="Forgot password?" onAction="#handleResetPassword"
                       style="-fx-text-fill: #3B82F6; -fx-font-size: 13; -fx-border-color: transparent;"/>

        </VBox>
    </center>

</BorderPane>
