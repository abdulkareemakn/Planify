<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.planifyfx.controller.DashboardController"
            style="-fx-background-color: #F8FAFC;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #1E293B; -fx-padding: 16 24;">
            <!-- Brand -->
            <Label text="Planify" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Navigation -->
            <Button fx:id="dashboardBtn" text="Dashboard" onAction="#showDashboard"
                    style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="eventsBtn" text="Events" onAction="#showEvents"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <!-- Separator -->
            <Region prefWidth="20"/>

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #94A3B8; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: #F8FAFC;">
            <VBox spacing="24" style="-fx-padding: 32;">

                <!-- Page Header -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label text="Dashboard" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="24"/>
                            </font>
                        </Label>
                        <Label text="Overview of your events" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                    </VBox>

                    <Button fx:id="addEventBtn" text="+ New Event" onAction="#addNewEvent"
                            style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Button>
                </HBox>

                <!-- Stats Cards Row -->
                <HBox spacing="20">
                    <!-- Total Events Card -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #FFFFFF; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                        <Label text="Total Events" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <Label fx:id="totalEventsLabel" text="0" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="32"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Wedding Events Card -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #FFFFFF; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                        <Label text="Weddings" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <Label fx:id="weddingEventsLabel" text="0" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="32"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Birthday Events Card -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #FFFFFF; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                        <Label text="Birthdays" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <Label fx:id="birthdayEventsLabel" text="0" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="32"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Seminar Events Card -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS"
                          style="-fx-background-color: #FFFFFF; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                        <Label text="Seminars" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                        <Label fx:id="seminarEventsLabel" text="0" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="32"/>
                            </font>
                        </Label>
                    </VBox>
                </HBox>

                <!-- Placeholder for recent events (future feature) -->
                <VBox fx:id="recentEventsContainer" spacing="12">
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
