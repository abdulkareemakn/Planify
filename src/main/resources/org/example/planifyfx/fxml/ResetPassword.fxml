<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.planifyfx.controller.ResetPasswordController"
            style="-fx-background-color: #F8FAFC;">

    <center>
        <!-- Reset Password Card -->
        <VBox alignment="CENTER" spacing="24" maxWidth="380"
              style="-fx-background-color: #FFFFFF; -fx-padding: 40; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 4);">

            <!-- Branding -->
            <VBox alignment="CENTER" spacing="8">
                <Label text="Planify" style="-fx-text-fill: #1E293B;">
                    <font>
                        <Font name="System Bold" size="28"/>
                    </font>
                </Label>
                <Label text="Reset Password" style="-fx-text-fill: #1E293B;">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>
                <Label text="Enter your username and new password" style="-fx-text-fill: #64748B;">
                    <font>
                        <Font size="13"/>
                    </font>
                </Label>
            </VBox>

            <!-- Form Fields -->
            <VBox spacing="16">
                <!-- Username -->
                <VBox spacing="6">
                    <Label text="Username" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 12; -fx-font-size: 14;"/>
                </VBox>

                <!-- New Password -->
                <VBox spacing="6">
                    <Label text="New Password" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                                   style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 12; -fx-font-size: 14;"/>
                </VBox>

                <!-- Confirm Password -->
                <VBox spacing="6">
                    <Label text="Confirm Password" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                                   style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 12; -fx-font-size: 14;"/>
                </VBox>
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" text="" wrapText="true" visible="false"
                   style="-fx-font-size: 12;"/>

            <!-- Buttons -->
            <VBox spacing="12">
                <Button fx:id="resetButton" text="Reset Password" maxWidth="Infinity"
                        onAction="#handleResetPassword"
                        style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 6; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Button>

                <Button fx:id="cancelButton" text="Back to Login" maxWidth="Infinity"
                        onAction="#handleCancel"
                        style="-fx-background-color: #FFFFFF; -fx-text-fill: #64748B; -fx-padding: 12 24; -fx-background-radius: 6; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-cursor: hand;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Button>
            </VBox>

        </VBox>
    </center>

</BorderPane>
