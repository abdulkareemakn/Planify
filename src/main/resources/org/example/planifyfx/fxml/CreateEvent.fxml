<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.planifyfx.controller.CreateEventController"
            style="-fx-background-color: #F8FAFC;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #1E293B; -fx-padding: 16 24;">
            <!-- Brand -->
            <Label text="Planify" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Navigation -->
            <Button fx:id="dashboardBtn" text="Dashboard" onAction="#showDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="eventsBtn" text="Events" onAction="#showEvents"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: #F8FAFC;">
            <VBox spacing="24" style="-fx-padding: 32;">

                <!-- Page Header -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="4" HBox.hgrow="ALWAYS">
                        <Label fx:id="pageTitle" text="Create New Event" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="24"/>
                            </font>
                        </Label>
                        <Label text="Fill in the details below" style="-fx-text-fill: #64748B;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                    </VBox>

                    <Button fx:id="cancelBtn" text="Cancel" onAction="#cancel"
                            style="-fx-background-color: #FFFFFF; -fx-text-fill: #64748B; -fx-padding: 10 20; -fx-background-radius: 6; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-cursor: hand;">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Button>

                    <Button fx:id="saveBtn" text="Save Event" onAction="#saveEvent"
                            style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;">
                        <font>
                            <Font name="System Bold" size="13"/>
                        </font>
                    </Button>
                </HBox>

                <!-- Form Card -->
                <VBox spacing="24"
                      style="-fx-background-color: #FFFFFF; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">

                    <!-- Event Type Selection -->
                    <VBox spacing="8">
                        <Label text="Event Type" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="13"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="eventTypeCombo" prefWidth="250" promptText="Select event type"
                                  style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6;">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Wedding"/>
                                    <String fx:value="Birthday"/>
                                    <String fx:value="Seminar"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </VBox>

                    <Separator style="-fx-background-color: #F1F5F9;"/>

                    <!-- Event Details Section -->
                    <VBox spacing="16">
                        <Label text="Event Details" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Label>

                        <GridPane hgap="24" vgap="16">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <!-- Row 0: Event Name -->
                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                                <Label text="Event Name" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <TextField fx:id="eventNameField" promptText="Enter event name"
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;"/>
                            </VBox>

                            <!-- Row 1: Date and Time -->
                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Date" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <DatePicker fx:id="eventDatePicker" promptText="Select date" maxWidth="Infinity"
                                            style="-fx-background-color: #FFFFFF;"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Time" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <ComboBox fx:id="hourCombo" promptText="Hour" prefWidth="80"
                                              style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6;">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="00"/><String fx:value="01"/><String fx:value="02"/>
                                                <String fx:value="03"/><String fx:value="04"/><String fx:value="05"/>
                                                <String fx:value="06"/><String fx:value="07"/><String fx:value="08"/>
                                                <String fx:value="09"/><String fx:value="10"/><String fx:value="11"/>
                                                <String fx:value="12"/><String fx:value="13"/><String fx:value="14"/>
                                                <String fx:value="15"/><String fx:value="16"/><String fx:value="17"/>
                                                <String fx:value="18"/><String fx:value="19"/><String fx:value="20"/>
                                                <String fx:value="21"/><String fx:value="22"/><String fx:value="23"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                    <Label text=":" style="-fx-text-fill: #64748B; -fx-font-size: 16;"/>
                                    <ComboBox fx:id="minuteCombo" promptText="Min" prefWidth="80"
                                              style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6;">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="00"/><String fx:value="15"/>
                                                <String fx:value="30"/><String fx:value="45"/>
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                </HBox>
                            </VBox>

                            <!-- Row 2: Attendance and Venue -->
                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <Label text="Expected Attendance" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <TextField fx:id="attendanceField" promptText="Number of guests"
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <Label text="Venue (Optional)" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <ComboBox fx:id="venueCombo" promptText="Select venue" maxWidth="Infinity"
                                          style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <Separator style="-fx-background-color: #F1F5F9;"/>

                    <!-- Client Information Section -->
                    <VBox spacing="16">
                        <Label text="Client Information" style="-fx-text-fill: #1E293B;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Label>

                        <GridPane hgap="24" vgap="16">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <!-- Row 0: Client Name -->
                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                                <Label text="Client Name" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <TextField fx:id="clientNameField" promptText="Enter client name"
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;"/>
                            </VBox>

                            <!-- Row 1: Email and Phone -->
                            <VBox spacing="6" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Email Address" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <TextField fx:id="clientEmailField" promptText="client@example.com"
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;"/>
                            </VBox>

                            <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label text="Phone Number" style="-fx-text-fill: #1E293B;">
                                    <font><Font name="System Bold" size="13"/></font>
                                </Label>
                                <TextField fx:id="clientPhoneField" promptText="+1 234 567 8900"
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;"/>
                            </VBox>
                        </GridPane>
                    </VBox>

                    <!-- Dynamic Event Type Fields Container -->
                    <VBox fx:id="dynamicFieldsContainer" spacing="16">
                        <!-- Wedding/Birthday/Seminar fields added dynamically -->
                    </VBox>

                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
