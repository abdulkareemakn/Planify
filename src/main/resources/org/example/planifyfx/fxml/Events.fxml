<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.planifyfx.controller.EventsController"
            style="-fx-background-color: #F8FAFC;"
            stylesheets="@../styles.css">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: #1E293B; -fx-padding: 16 24;">
            <!-- Brand -->
            <Label text="Planify" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Navigation -->
            <Button fx:id="dashboardBtn" text="Dashboard" onAction="#showDashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="eventsBtn" text="Events" onAction="#showEvents"
                    style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <!-- Separator -->
            <Region prefWidth="20"/>

            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #94A3B8; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;">
                <font>
                    <Font size="13"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="24" style="-fx-padding: 32;">

            <!-- Page Header -->
            <HBox alignment="CENTER_LEFT" spacing="16">
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label text="Events" style="-fx-text-fill: #1E293B;">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>
                    <Label text="Manage all your events" style="-fx-text-fill: #64748B;">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Label>
                </VBox>

                <Button fx:id="createEventBtn" text="+ New Event" onAction="#createNewEvent"
                        style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Button>
            </HBox>

            <!-- Events Table Card -->
            <VBox VBox.vgrow="ALWAYS"
                  style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                <padding>
                    <Insets bottom="8" left="8" right="8" top="8"/>
                </padding>

                <TableView fx:id="eventsTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: transparent; -fx-table-cell-border-color: transparent;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="nameColumn" text="Event Name" prefWidth="180"/>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="90"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="70"/>
                        <TableColumn fx:id="clientColumn" text="Client" prefWidth="120"/>
                        <TableColumn fx:id="attendanceColumn" text="Guests" prefWidth="60" style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="specialDetailsColumn" text="Details" prefWidth="320"/>
                        <TableColumn fx:id="actionsColumn" text="" prefWidth="80" style="-fx-alignment: CENTER;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
